<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.noticia.titulo</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
</head>
<body>
    <h1>@ViewBag.noticia.titulo</h1>
    <div class="well">
        <small>
            Autor: @ViewBag.noticia.correoAutor<br />
            Fecha: @ViewBag.noticia.fecha <br />
            Id: @ViewBag.noticia.id.ToString()
        </small>
        <hr />
        <p>@ViewBag.noticia.cuerpo</p>
        <img src=@Url.Action("ObtenerImagen", "Noticias",  new { numNoticia = ViewBag.noticia.id.ToString() }) style="width:200px;height:200px;">


        <div>
            @Html.ActionLink("Regresar", "listadoDeNoticias", "Noticias")
        </div>

        <div>
            @foreach (var noticia in ViewBag.noticia)
            {
                if (noticia.categoriaNoticia == @ViewBag.categorias[numCategoria])
                {
                    <p>
                        <i>
                            Tópico(s): @noticia.topicoNoticia @if (noticia.topicoNoticia2 != "NULL")
                            {@noticia.topicoNoticia2}
                        else { } @if (noticia.topicoNoticia3 != "NULL")
                            {@noticia.topicoNoticia3}
                        else { }
                    </i>
                </p>
                }
            }
            </div>

    </div>
</body>
</html>