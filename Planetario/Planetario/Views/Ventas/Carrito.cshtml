<style>
    .card-con-imagen-izq {
        flex-direction: row;
        align-items: center;
        min-height: 216px;
    }
    .card-con-imagen-izq img {
        width:200px;
        height: 200px;
        object-fit:cover;
        margin: 8px auto auto 8px;
        object-shadow: 0px 0px 2x black;
        /*border: 2px solid #133b5c;*/
    }
</style>

<body>
    <span class="titulo">Carrito</span>
    <div class="row">
    
        <div class="col-md-8">
            <h1>Productos</h1>
            
            @foreach (var producto in ViewBag.ListaProductos)
            {
                <div class="card card-con-imagen-izq bg-light">
                    <img class="border" src="@Url.Action("ObtenerImagen", "Ventas", new { id = producto.Id })">
                    <div class="card-body">
                        <h3 class="card-title">@producto.Nombre</h3>
                        <p class="card-text">@producto.Descripcion</p>
                        <p class="card-text"><strong>Precio: </strong>@producto.Precio</p>
                        @Html.ActionLink("Eliminar", "EliminarElementoDelCarritoDelUsuario", new { idComprable = producto.Id }, new { @class = "btn btn-outline-danger" })
                    </div>     
                </div>
                <br />
            }

            <br><h1>Entradas a actividades</h1><br />
            @foreach (var entrada in ViewBag.ListaEntradas)
            {
                <h3>@entrada.Nombre</h3>
                <p><strong>Precio: </strong>@entrada.Precio</p>
                <hr />
            }
        </div>
        <div class="col-md-3 offset-md-1">
            
            <div class="card">                
                <div class="card-body">
                    <div class="card-text">
                        <h4>Subtotal: (@ViewBag.CantidadItems items.)</h4>
                        <h5><strong>Precio: </strong>@ViewBag.Precio</h5>
                        <h5><strong>IVA: </strong>@ViewBag.IVA</h5>
                        <h5><strong>Precio Total: </strong>@ViewBag.PrecioTotal</h5>
                    </div>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary">Seguir comprando</a>
                    <a class="btn btn-success">Pagar</a>
                </div>
            </div>
        </div>
    </div>

    
</body>