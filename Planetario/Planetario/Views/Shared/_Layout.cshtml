<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planetario Halley</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Planetario Halley", "InformacionBasica", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Informacion", "HorariosParqueoTransporte", "Home")</li>
                    <li>@Html.ActionLink("Funcionarios", "ListaFuncionarios", "Funcionarios")</li>
                    <li>@Html.ActionLink("Noticias", "listadoDeNoticias", "Noticias")</li>
                    <li>@Html.ActionLink("Preguntas Frecuentes", "PreguntasFrecuentes", "PreguntasFrecuentes")</li>
                    <li>@Html.ActionLink("Actividades", "listadoDeActividades", "Actividades")</li>
                    <li>@Html.ActionLink("Materiales Educativos", "listadoDeMateriales", "MaterialEducativo")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                Administrar
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Agregar Usuario", "agregarUsuario", "Usuario")</li>
                                <li>@Html.ActionLink("Agregar Funcionario", "AgregarFuncionario", "Funcionarios")</li>
                                <li>@Html.ActionLink("Agregar Material", "AlmacenarNuevoMaterialEducativo", "MaterialEducativo")</li>
                                <li>@Html.ActionLink("Agregar Noticia", "crearNoticia", "Noticias")</li>
                                <li>@Html.ActionLink("Agregar Pregunta", "AgregarNuevaPregunta", "PreguntasFrecuentes")</li>
                                <li>@Html.ActionLink("Agregar Actividad", "crearActividad", "Actividades")</li>
                            </ul>
                        </li>
                        <li><a href="/Usuario/cerrarSesion"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    }
                    else
                    {
                        <li><a href="/Usuario/iniciarSesion"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>

                    }
                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content ">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">&copy; @DateTime.Now - Planetario Halley</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
