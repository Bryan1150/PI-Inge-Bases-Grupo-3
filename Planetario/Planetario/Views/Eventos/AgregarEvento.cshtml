@model Planetario.Models.EventoModel

@using (Html.BeginForm("AgregarEvento", "Eventos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <span class="titulo">Crear Evento</span>
    <p class="alert-success">@ViewBag.mensaje</p>
    <h4> Formulario de agregar eventos</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 col-sm-12">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-6 col-sm-12">
                @Html.TextBoxFor(model => model.Fecha, new { @type = "date", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            @Html.LabelFor(model => model.Hora, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-6 col-sm-12">
                @Html.TextBoxFor(model => model.Hora, new { @type = "time", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.Hora, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-1 col-md-1 col-sm-2">
            <input type="submit" value="Crear" class="btn btn-success" />
        </div>
        <div class="col-1 col-md-1 col-sm-2">
            @Html.ActionLink("Volver", "PanelDeAdministracion", "Home", new { area = "" }, new { @class = "btn btn-danger" })
        </div>
    </div>

    <div style="margin-top:100px"></div>

    <div>
        @Html.ActionLink("Regresar a Inicio", "InformacionBasica", "Home")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
