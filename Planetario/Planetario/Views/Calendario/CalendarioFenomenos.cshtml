
@{
    ViewBag.Title = "RSSFeed";

}

<!DOCTYPE html>
<html>
<head>
    <title>Calendario Fenomenos</title>
    <meta charset="utf-8" />
    <link href='../lib/main.css' rel='stylesheet' />
    <script src='../lib/main.js'></script>
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
    <style>

        body {
            margin: 40px 10px;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 1100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <span class="titulo">
        Calendario Fenomenos
    </span>

    <script>







        document.addEventListener('DOMContentLoaded', function () {

            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialDate: '2020-09-12',
                editable: true,
                selectable: true,
                businessHours: true,
                dayMaxEvents: true, // allow "more" link when too many events
                events: [{
                    title: 'All Day Event',
                    start: '2020-09-01',
                }],
            });

            $.getJSON('@Url.Action("GetEventsForCalendar")', function (eventos) {
                console.log(eventos);

                $.each(eventos, function (index, evento) {
                    console.log(evento.Title);
                    console.log(evento.PubDate);
                    calendar.addEvent({
                        
                        title: evento.Title,
                        start: evento.PubDate,
                        allDay: true
                    });
                });
            });    
            calendar.render();
        });

    </script>

    <div id='calendar'></div>

</body>
</html>