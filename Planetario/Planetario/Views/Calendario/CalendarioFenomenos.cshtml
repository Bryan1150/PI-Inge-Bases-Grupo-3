
@{
    ViewBag.Title = "RSSFeed";
}
@{string dataOrigin = Url.Content("~/Calendario/GetEventosPlanetario");}
@{string RSSFeed = Url.Content("~/Calendario/GetEventosRSSFeed");}

<!DOCTYPE html>
<html>
<head>
    <title>Calendario Fenomenos</title>
    <meta charset="utf-8" />
    <script src="~/Scripts/moment.js"></script>
    <link href='../lib/main.css' rel='stylesheet' />
    <script src='../lib/main.js'></script>

    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
    <style>

        body {
            margin: 40px 10px;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 1100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <span class="titulo">
        Calendario Fenomenos
    </span>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="" id="checkbox1" checked onchange="cambiarEstadoEventosPlanetario()"/>
        <label class="form-check-label" for="checkbox1">Actividades del Planetario</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="" id="checkbox2" checked onchange="cambiarEstadoEventosAstronomicos()"/>
        <label class="form-check-label" for="checkbox2">Eventos Astronómicos</label>
    </div>

    <script>
        function cambiarEstadoEventosPlanetario() {
            estadoActual = document.getElementById("checkbox1").checked;
            if (estadoActual) {
                calendar.addEventSource({id: 1, url: "@dataOrigin", color: '#133b5c' });
            }
            else {
                calendar.getEventSourceById(1).remove();
            }
            calendar.refetchEvents();
        }
        function cambiarEstadoEventosAstronomicos() {
            estadoActual = document.getElementById("checkbox2").checked;
            if (estadoActual) {
                calendar.addEventSource({id:2, url: "@RSSFeed", color: '#fcdab7', textColor: 'black' });
            }
            else {
                calendar.getEventSourceById(2).remove();
            }
            calendar.refetchEvents();
        }

        var eventosPlanetario = {id: 1, url: "@dataOrigin", color: '#133b5c' };
        var eventosAstronomicos = {id: 2, url: "@RSSFeed", color: '#fcdab7', textColor: 'black' };
        var calendar;

        document.addEventListener('DOMContentLoaded', async function () {
            var calendarEl = document.getElementById('calendar');
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialDate: '2021-11-12',
                editable: false,
                selectable: true,
                businessHours: true,
                eventDidMount: function (info) { info.el.title = info.event.title; },
                dayMaxEvents: true,
                eventSources: [eventosPlanetario, eventosAstronomicos],

            });
            cambiarEstadoEventosPlanetario();
            cambiarEstadoEventosAstronomicos();
            calendar.render();
        });
    </script>

    <div id='calendar'></div>
</body>
</html>