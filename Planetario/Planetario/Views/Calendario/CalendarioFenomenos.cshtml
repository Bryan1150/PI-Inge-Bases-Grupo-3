
@{
    ViewBag.Title = "RSSFeed";
}
@{string dataOrigin = Url.Content("~/Calendario/GetEventosPlanetario");}

<!DOCTYPE html>
<html>
<head>
    <title>Calendario Fenomenos</title>
    <meta charset="utf-8" />
    <link href='../lib/main.css' rel='stylesheet' />
    <script src='../lib/main.js'></script>
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
    <style>

        body {
            margin: 40px 10px;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 1100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <span class="titulo">
        Calendario Fenomenos
    </span>

    <script>

        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var variable = [{
                title: 'All Day Event',
                start: '2020-09-01',
            }];

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialDate: '2020-09-12',
                editable: true,
                selectable: true,
                businessHours: true,
                dayMaxEvents: true, // allow "more" link when too many events
                eventSources: [{ url: "@dataOrigin", color: '#133b5c' }, { events: variable, color:'#fcdab7',textColor:'black'}],
            });

            calendar.render();
        });

    </script>

    <div id='calendar'></div>

</body>
</html>