
@{
    ViewBag.Title = "RSSFeed";
}
@{string dataOrigin = Url.Content("~/Calendario/GetEventosPlanetario");}
@{string RSSFeed = Url.Content("~/Calendario/GetEventosRSSFeed");}

<!DOCTYPE html>
<html>
<head>
    <title>Calendario Fenomenos</title>
    <meta charset="utf-8" />
    <script src="~/Scripts/moment.js"></script>
    <link href='../lib/main.css' rel='stylesheet' />
    <script src='../lib/main.js'></script>

    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
    <style>

        body {
            margin: 40px 10px;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 1100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <span class="titulo">
        Calendario Fenomenos
    </span>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var variable = [];



            variable.push({
                title: 'All Day Event',
                start: '2021-11-02',
            })

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialDate: '2021-11-12',
                editable: true,
                selectable: true,
                businessHours: true,
                dayMaxEvents: true, // allow "more" link when too many events
                eventSources: [{ url: "@dataOrigin", color: '#133b5c' }, { events: variable, color: '#fcdab7', textColor: 'black' }],
            });

            $.getJSON('@Url.Action("GetEventosRSSFeed")', function (eventos) {
                console.log(eventos);

                $.each(eventos, function (index, evento) {
                    console.log(evento.title);
                    console.log(evento.start);
                    var date = new Date('2021-11-12' + 'T00:00:00');
                    calendar.addEvent({

                        title: evento.title,
                        start: date,
                        allDay: true
                    });
                });
             });

            calendar.render();
        });

    </script>

    <div id='calendar'></div>

</body>
</html>