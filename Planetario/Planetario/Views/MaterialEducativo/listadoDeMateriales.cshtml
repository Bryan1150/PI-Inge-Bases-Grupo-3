@model Planetario.Models.MaterialEducativoModel
@{
    ViewBag.Title = "Materiales";
}

<!DOCTYPE html>
<html>
<head>
    <title>Materiales Educativos</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
</head>
<body>
    <span class="titulo">
        Materiales Educativos
    </span>

    <form method="post" class="navbar-form navbar-right" action="@Url.Action("buscarMaterialesEducativos", "MaterialEducativo")">
        <div class="form-group">
            <input type="text" name="palabra" class="form-control" placeholder="Buscar material">
        </div>
        <button type="submit" class="btn btn-secondary"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
    </form>

    <table class="table table-hover well">
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Público</th>
            <th>Educador</th>
            <th>Fecha</th>
            <th>Archivo</th>
        </tr>
        @foreach (var material in ViewBag.materiales)
        {
            <tr>
                <td>@material.Id  </td>
                <td>@material.Titulo </td>
                <td>@material.PublicoDirigido</td>
                <td>@material.CorreoResponsable</td>
                <td>@material.Fecha</td>
                <td>
                    @Html.ActionLink("Ver", "accederArchivo",
                         new { identificador = material.Id },
                         new { target = "_blank" }
                     )
                </td>
            </tr>
        }
    </table>

</body>
</html>