@model Planetario.Models.ActividadModel
@{ 
    ViewBag.Title = "Crear Actividad";
    List<SelectListItem> tipos = new List<SelectListItem>()
    {
        new SelectListItem{Text="Charla"},
        new SelectListItem{Text="Taller"},
        new SelectListItem{Text="Otra"}
    };
}

<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.ExitoAlCrear)
        {
            <div class="alert-success">
                <h3> @ViewBag.Message </h3>
            </div>
        }
        else
        {
            <div class="alert-danger">
                <h3> @ViewBag.Message </h3>
            </div>
        }
    }
    @using (Html.BeginForm("crearActividad", "Actividades", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h1>Formulario para proponer actividades</h1>

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.nombre)
                @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.tema)
                @Html.TextBoxFor(model => model.tema, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tema, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descripcion)
                @Html.TextBoxFor(model => model.descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.tipo)
                @Html.DropDownListFor(model => model.tipo, tipos, "-Sin selección-", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.publicoDirigido)
                @Html.TextBoxFor(model => model.publicoDirigido, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.publicoDirigido, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.duracion)
                @Html.TextBoxFor(model => model.duracion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.duracion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.correoFK)
                @Html.TextBoxFor(model => model.correoFK, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.correoFK, "", new { @class = "text-danger" })
            </div>

            <input type="submit" class="btn btn-success" value="Crear" />
        </div>
    }
</body>
</html>