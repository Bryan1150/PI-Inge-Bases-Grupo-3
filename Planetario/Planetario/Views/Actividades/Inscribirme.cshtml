<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Utils/css/vistaPagos.css">
</head>
<body>
    <span class="titulo">
        Inscribirme a @ViewBag.titulo
    </span>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.ExitoAlInscribir)
        {
            <div class="alert-success">
                <h3> @ViewBag.Message </h3>
            </div>
        }
        else
        {
            <div class="alert-danger">
                <h3> @ViewBag.Message </h3>
            </div>
        }
    }
    else
    {
        using (Html.BeginForm("Inscribirme", "Actividades", FormMethod.Post, new { id = "formularioGeneral", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="container mt-5 px-5">

                <section id="formularioCorreo" class="card">
                    <div class="container row">
                        <div class="col-md-4 col-sm-12">
                            <div class="form-floating">
                                @Html.TextBoxFor(model => model.Correo, new { @id= "entradaCorreo", @class = "form-control input-lg", @placeholder = "correo" })
                                @Html.LabelFor(model => model.Correo, htmlAttributes: new { @class = "" })
                                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <input type="button" class="btn btn-success btn-lg" value="Validar" id="botonValidar" onclick="validarCorreo()" />
                        </div>
                    </div>
                </section>


                <section id="formularioDatosPersonales">
                    <h4>Formulario inscripción</h4>
                    <hr />
                    <div class="card">
                        <div class="row">
                            <div class="col-4 col-md-4 col-sm-12">
                                <div class="form-floating">
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
                                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-floating">
                                    @Html.TextBoxFor(model => model.Apellido1, new { @class = "form-control", @placeholder = "Apellido1" })
                                    @Html.LabelFor(model => model.Apellido1, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Apellido1, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-floating">
                                    @Html.TextBoxFor(model => model.Apellido2, new { @class = "form-control", @placeholder = "Apellido2" })
                                    @Html.LabelFor(model => model.Apellido2, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Apellido2, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-4 col-md-4 col-sm-12">
                                <div class="form-floating">
                                    @Html.DropDownListFor(model => model.Genero, Generos, "", new { @class = "form-control", @placeholder = "Genero" })
                                    @Html.LabelFor(model => model.Genero, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-floating">
                                    @Html.DropDownListFor(model => model.Pais, Paises, "", new { @class = "form-control", @placeholder = "Pais" })
                                    @Html.LabelFor(model => model.Pais, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Pais, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-floating">
                                    @Html.DropDownListFor(model => model.NivelEducativo, NivelesEducativos, "", new { @class = "form-control dropdown-toggle", @placeholder = "NivelEducativo" })
                                    @Html.LabelFor(model => model.NivelEducativo, htmlAttributes: new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.NivelEducativo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-4 col-md-4 col-sm-12 text-center" >
                                @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.TextBoxFor(model => model.FechaNacimiento, new { @type = "date", @class = "form-​control datepicker", @placeholder = "Fecha" })
                                    @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <input class="form-control" id="NombreActividad" name="NombreActividad" type="hidden" value="@ViewBag.titulo" />

