                                        <div class="col-md-6">
                                            <div class="form-floating"> <input type="text" name="name" class="form-control" required="required" placeholder=""> <label>Provincia</label> </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating"> <input type="text" name="name" class="form-control" required="required" placeholder=""> <label>Cantón</label> </div>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-6">
                                            <div class="form-floating"> <input type="text" name="name" class="form-control" required="required" placeholder=""> <label>Detalles</label> </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating"> <input type="text" name="name" class="form-control" required="required" placeholder=""> <label>Codigó postal</label> </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-4 d-flex justify-content-between">
                                <label class="text-danger">Cancelar pago</label>
                                <input type="submit" class="btn btn-success btn-lg btn-lg" value="Pagar" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card card-blue p-3 text-white mb-3">
                                <span>Usted debe pagar</span>
                                <div class="d-flex flex-row align-items-end mb-3">
                                    <h1 class="mb-0 yellow">₡ @ViewBag.precio</h1>
                                </div> 
                                <span>por su entrada a la actividad </span> 
                                <h3 class="yellow">@ViewBag.Titulo</h3>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        }
    }
    <script src="~/Utils/js/formularioInscripcion.js"></script>
    <script>
        function validarCorreo() {
            const correo = document.getElementById("entradaCorreo").value;
            fetch("@linkValidarCorreo?correo="+correo)
            .then(respuesta => {
                return respuesta.json();
            })
            .then(data => {
                document.getElementById("formularioCorreo").style.display = "none";
                if(data.estaAlmacenado) {
                    document.getElementById("formularioDatosPago").style.display = "contents";
                    document.getElementById("Nombre").value = data.infoPersonal.Nombre;
                    document.getElementById("Apellido1").value = data.infoPersonal.Apellido1;
                    document.getElementById("Apellido2").value = data.infoPersonal.Apellido2;
                    document.getElementById("Pais").value = data.infoPersonal.Pais;
                    document.getElementById("Genero").value = data.infoPersonal.Genero;
                    document.getElementById("NivelEducativo").value = data.infoPersonal.NivelEducativo;
                    document.getElementById("FechaNacimiento").value = data.infoPersonal.FechaNacimiento;
                    console.log(data.infoPersonal.FechaNacimiento);
                } else {
                    document.getElementById("formularioDatosPersonales").style.display = "contents";
                }
            })
        }

    </script>
</body>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
</html>
